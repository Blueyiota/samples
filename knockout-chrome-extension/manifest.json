{
  "name": "Knockout Chrome Extension",
  "version": "0.1",
  "manifest_version": 2,
  "description": "An example extension that uses KnockoutJS",
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_title": "Knockout Chrome Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "topSites",
    "tabs"
  ],
  "sandbox": {
    "pages": ["app.html"]
  }
}
